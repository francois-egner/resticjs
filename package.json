{
  "name": "resticjs",
  "version": "0.2.0",
  "description": "A comprehensive TypeScript library for interacting with the Restic backup tool",
  "keywords": [
    "restic",
    "backup",
    "cli",
    "typescript",
    "node"
  ],
  "homepage": "https://github.com/francois-egner/resticjs#readme",
  "bugs": {
    "url": "https://github.com/francois-egner/resticjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/francois-egner/resticjs.git"
  },
  "license": "ISC",
  "author": "Francois Egner",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts",
    "start": "node -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "start:dev": "nodemon --exec node -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "start:prod": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}